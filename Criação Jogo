<body>

  <h1>üé® Clique na Cor Certa!</h1>
  <div id="color-name">Azul</div>

  <div class="buttons">
    <button class="color-btn" style="background-color: red;" onclick="checkColor('vermelho')"></button>
    <button class="color-btn" style="background-color: blue;" onclick="checkColor('azul')"></button>
    <button class="color-btn" style="background-color: green;" onclick="checkColor('verde')"></button>
    <button class="color-btn" style="background-color: yellow;" onclick="checkColor('amarelo')"></button>
    <button class="color-btn" style="background-color: purple;" onclick="checkColor('roxo')"></button>
  </div>

  <div id="score">Pontua√ß√£o: 0</div>
  <div id="timer">‚è±Ô∏è Tempo restante: 30s</div>
  <div id="game-over">‚õî Fim de jogo!</div>
  <button id="restart" onclick="location.reload()">Jogar Novamente</button>

  <script>
    const colorName = document.getElementById('color-name');
    const scoreEl = document.getElementById('score');
    const timerEl = document.getElementById('timer');
    const gameOverEl = document.getElementById('game-over');
    const restartBtn = document.getElementById('restart');

    const colors = ['vermelho', 'azul', 'verde', 'amarelo', 'roxo'];
    const cssColors = {
      vermelho: 'red',
      azul: 'blue',
      verde: 'green',
      amarelo: 'yellow',
      roxo: 'purple'
    };

    let currentColor = '';
    let score = 0;
    let timeLeft = 30;
    let timer;

    function randomColor() {
      const colorText = colors[Math.floor(Math.random() * colors.length)];
      const colorStyle = cssColors[colors[Math.floor(Math.random() * colors.length)]];

      currentColor = colorText;
      colorName.textContent = colorText.charAt(0).toUpperCase() + colorText.slice(1);
      colorName.style.color = colorStyle;
    }

    function checkColor(colorClicked) {
      if (timeLeft <= 0) return;

      if (colorClicked === currentColor) {
        score++;
        scoreEl.textContent = `Pontua√ß√£o: ${score}`;
      } else {
        score--;
        scoreEl.textContent = `Pontua√ß√£o: ${score}`;
      }

      randomColor();
    }

    function startTimer() {
      timer = setInterval(() => {
        timeLeft--;
        timerEl.textContent = `‚è±Ô∏è Tempo restante: ${timeLeft}s`;

        if (timeLeft <= 0) {
          clearInterval(timer);
          gameOverEl.style.display = 'block';
          restartBtn.style.display = 'inline-block';
        }
      }, 1000);
    }

    // Iniciar o jogo
    randomColor();
    startTimer();
  </script>

</body>
</html>
